<?xml version="1.0" encoding="UTF-8"?>
<messages>
	<message id="beer-form">
		<div class="header">
			<img src="${app.context}/pics/header.png" alt="Header image"></img>
		</div>
		<div class="div-row">
			<table>
				<tr>
					<td>
						<div>${beer}</div>
						<div>${tr:beer-form.brewed-by}: ${brewery}</div>
						<div>${tr:beer-form.likes}: ${likes}</div>
						<div>${tr:beer-form.score}: ${score} / ${highest-score}</div>
					</td>
					<td>
						${picture}
					</td>
				</tr>
			</table>	
		</div>
		<div class="div-row">
			<span>TODO: facebook like</span>
			<span>TODO: facebook share</span>
			${add-to-favorites}
		</div>
		<div class="div-row">
			<table>
			<tr>
				<td>${tr:beer-form.tags}:</td> <td>${tags}</td>
			</tr>
			<tr>
				<td></td> <td>${add-tag}</td>
			</tr>
			</table>
		</div>
	</message>
	
	<message id="tag">
		<div class="tag">${text}</div>
	</message>
</messages>