<?xml version="1.0" encoding="UTF-8"?>
<messages>
	<message id="start-form">
		<div class="header">
			<img src="${app.context}/pics/header.png" alt="Header image"></img>
		</div>
		
		<div class="div-row">
			<table>
				<tr>
					<td>
						<div class="search">
							${beer-search-text}
							${beer-search-button}
						</div>
					</td>
					<td>
						<div class="search">
							${bar-search-text}
							${bar-search-button}
						</div>
					</td>
				</tr>
			</table>
		</div>
		<div class="div-row login">
			${login}
		</div>
	</message>
	
	<message id="beer-form">
		<div class="header">
			<img src="${app.context}/pics/header.png" alt="Header image"></img>
		</div>
		
		<div class="div-row">
			<table>
				<tr>
					<td>
						<div>${beer}</div>
						<div>${tr:beer-form.brewed-by}: ${brewery}</div>
						<div>${tr:beer-form.favored-by}: ${favored-by}</div>
						<div>${tr:beer-form.score}: ${score} / ${highest-score}</div>
					</td>
					<td>
						${picture}
					</td>
				</tr>
			</table>	
		</div>
		<div class="div-row">
			<span>TODO: facebook like</span>
			<span>TODO: facebook share</span>
			${add-to-favorites}
		</div>
		<a target="_blank" href="${find-bars-url}">${find-bars-text}</a>
		<div class="div-row">
			<table>
				<tr>
					<td>${tr:beer-form.tags}:</td> <td>${tags}</td>
				</tr>
				<tr>
					<td></td> <td>${add-tag}</td>
				</tr>
			</table>
		</div>
		<div class="div-row">
			<div>${tr:beer-form.reviews}:</div>
			${add-review}
			${reviews}
		</div>
	</message>
	
	<message id="tag">
		<div class="tag">${text}</div>
	</message>
	
	<message id="review">
		<div class="review">
			<div class="div-row">
				<div class="average-score">${tr:review.average-score}:${average-score}</div>
				<div class="poster">${tr:review.posted-by}: ${poster}</div>
			</div>
			<div class="div-row">
				<div class="score">${tr:review.color}:${color-score}</div>
				<div class="score">${tr:review.smell}:${smell-score}</div>
				<div class="score">${tr:review.taste}:${taste-score}</div>
				<div class="score">${tr:review.feel}:${feel-score}</div>
			</div>
			<div class="div-row">${text}</div>
			<div class="div-row">${control}</div>
			<div class="div-row">${comments}</div>
		</div>
	</message>
	
	<message id="ellipsis">
		<span>...</span>
	</message>
	

	<message id="add-tag-dialog">
		<div class="dialog">
			<div class="div-row">${type-combo}</div>
			<div class="div-row">${variable-field}</div>
			<div class="controls">${ok} ${cancel}</div>
		</div>
	</message>
	
	<message id="add-review-dialog">
		<div class="dialog">
			<div class="div-row scores">
				<div class="score">${tr:add-review-dialog.color}:${color}</div>
				<div class="score">${tr:add-review-dialog.smell}:${smell}</div>
				<div class="score">${tr:add-review-dialog.taste}:${taste}</div>
				<div class="score">${tr:add-review-dialog.feel}:${feel}</div>
			</div>
			<div class="div-row">
				${tr:add-review-dialog.text}:
				${text}
			</div>
			<div class="controls">${ok} ${cancel}</div>
		</div>
	</message>

	<message id="user-form">
		<div class="first-name">${first-name}</div>
		<div class="last-name">${last-name}</div>
	</message>
	
	
	<message id="bar-form">
	
		<div class="header">
			<img src="${app.context}/pics/header.png" alt="Header image"></img>
		</div>
		<div>
			<table>
				<tr>
					<td>
						${picture}
					</td>
					<td>
						<div>${bar}</div>
						<div>${tr:bar-form.website}: ${website}</div>
						<div>${tr:bar-form.address}: ${address1}</div>
						<div> ${address2}</div>
						<div> ${address3}</div>
						<div>${tr:bar-form.favored-by}: ${favored-by}</div>
						<div>${score-chart}</div>
						<div>${tr:bar-form.score}: ${score} / 10 ${change-score}</div>
					</td>
					<td>
						<div>${tr:bar-form.beerlist-tile}</div>
						<table>
							<tr></tr>
						</table>	
					</td>
				</tr>
			</table>	
		</div>
		<div class="div-row">
		    <span>TODO: facebook like</span>
			<span>TODO: facebook share</span>
			<div class="controls">${add-to-favorites}</div>
		</div>
	</message>
	
	
	<message id="new-bar-form">
		<div class="header">
			${tr:new-bar-form.title}
		</div>
		
		<div>
			<table>
				<tr>
					
					<td>
						<div>${tr:new-bar-form.name}: ${bar}</div>
						<div>${tr:new-bar-form.website}: ${website}</div>
						<div>${tr:bar-form.street}: ${street} ${tr:bar-form.number}: ${number} </div>
						<div>${tr:bar-form.zipcode}: ${zipcode} ${tr:bar-form.city}: ${city}</div>
						<div> ${tr:bar-form.country}: ${country}</div>
						<div>${tr:new-bar-form.score}: ${score} /10</div>
					</td>
					<td>
						<div>${tr:new-bar-form.beerlist-tile}</div>
						<table>
							<tr></tr>
						</table>	
					</td>
				</tr>
			</table>	
			<div class="controls">${ok} ${cancel}</div>
		</div>
	</message>
</messages>